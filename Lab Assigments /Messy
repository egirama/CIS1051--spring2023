# This program debugged messy code 

def main():
    print("It's time to go on a scavenger hunt!")
    print("You'd be amazed how many things can go wrong!")
    travel_time = int(input("Please enter how long you want to travel for:"))
    initialPos = 7.0
    time = float(travel_time)
    velocity = 5.0
    acceleration = 1.0
    
    position = initialPos + velocity * time + (1/2) * acceleration * time * time
    print(position)
main()
